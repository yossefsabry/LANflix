<network-security-config>
    <!-- 
      Allow cleartext (HTTP) traffic for all domains.
      This is required because the app connects to servers on local networks 
      (192.168.x.x, 10.x.x.x, etc.) where IPs are dynamic and strictly defined 
      subdomains/ranges are not supported by Android's network-security-config 
      for IP addresses.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
