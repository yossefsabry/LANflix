<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lanflix_bg"
    tools:context=".StreamingActivity">

    <!-- Sticky Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC09090B"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_back_dashboard"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/lanflix_text_main"
                    android:layout_marginEnd="12dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/lanflix_primary"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dns"
                        app:tint="@color/black" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="LANflix"
                    android:textColor="@color/lanflix_text_main"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_profile"
                app:shapeAppearanceOverlay="@style/CircleImage"
                app:tint="@color/lanflix_text_main"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="24dp">

            <!-- Media Core Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_media_core"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lanflix_surface"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Server Image / Gradient Area -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_server_card"
                            app:tintMode="src_over" />

                        <!-- Online Status Badge -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            app:cardBackgroundColor="#99000000"
                            app:cardCornerRadius="20dp"
                            app:strokeColor="#1FFFFFFF"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp">

                                <View
                                    android:id="@+id/status_dot"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/ic_lanflix_logo"
                                    android:backgroundTint="@color/lanflix_primary" />

                                <TextView
                                    android:id="@+id/status_badge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="ONLINE"
                                    android:textColor="@color/lanflix_primary"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <!-- Core Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LANflix Server"
                                android:textColor="@color/lanflix_text_main"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_dns"
                                    app:tint="@color/lanflix_text_sub" />

                                <TextView
                                    android:id="@+id/server_url_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:fontFamily="monospace"
                                    android:text="192.168.1.50"
                                    android:textColor="@color/lanflix_text_sub"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_start_server"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#0DFFFFFF"
                            android:paddingHorizontal="16dp"
                            android:text="Stop"
                            android:textColor="@color/lanflix_text_main"
                            android:textSize="12sp"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_play_arrow"
                            app:iconSize="16dp"
                            app:iconTint="@color/lanflix_text_main"
                            app:strokeColor="#1AFFFFFF"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1AFFFFFF" />

                    <!-- Footer Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UPTIME"
                                android:textColor="@color/lanflix_text_sub"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_stat_uptime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0m"
                                android:textColor="@color/lanflix_text_main"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LOAD"
                                android:textColor="@color/lanflix_text_sub"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_stat_load"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/lanflix_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- Speed Stat -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/lanflix_surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#1AFFFFFF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_lanflix_logo"
                            android:backgroundTint="#1AFAC638"
                            android:padding="5dp"
                            android:src="@drawable/ic_speed"
                            app:tint="@color/lanflix_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Speed"
                            android:textColor="@color/lanflix_text_sub"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_stat_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="0"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/lanflix_text_main"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Library Stat -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/lanflix_surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#1AFFFFFF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_lanflix_logo"
                            android:backgroundTint="#1AFAC638"
                            android:padding="5dp"
                            android:src="@drawable/ic_movie"
                            app:tint="@color/lanflix_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Library"
                            android:textColor="@color/lanflix_text_sub"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_stat_library"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="0"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:textColor="@color/lanflix_text_main"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Active Stat -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/lanflix_surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#1AFFFFFF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_lanflix_logo"
                            android:backgroundTint="#1AFAC638"
                            android:padding="5dp"
                            android:src="@drawable/ic_devices"
                            app:tint="@color/lanflix_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Active"
                            android:textColor="@color/lanflix_text_sub"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_stat_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="0"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/lanflix_text_main"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Action Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">

                <!-- Row 1: Primary Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_rescan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:paddingVertical="12dp"
                        android:text="SYNC LIBRARY"
                        android:textColor="@color/lanflix_bg"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        app:backgroundTint="@color/lanflix_primary"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_sync"
                        app:iconSize="18dp"
                        app:iconTint="@color/lanflix_bg" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_media"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="12dp"
                        android:text="MYVIDEOS\n/NETWORK"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        app:backgroundTint="@color/lanflix_surface"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_add_circle"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:iconTint="@color/lanflix_text_sub"
                        app:strokeColor="#1AFFFFFF"
                        app:strokeWidth="1dp" />
                </LinearLayout>

                <!-- Row 2: Secondary Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_logs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:paddingVertical="12dp"
                        android:text="LOGS"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/lanflix_surface"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_history"
                        app:iconSize="18dp"
                        app:iconTint="@color/lanflix_text_sub"
                        app:strokeColor="#1AFFFFFF"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_dashboard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="12dp"
                        android:text="DASHBOARD"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:enabled="false"
                        app:backgroundTint="@color/lanflix_surface"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_desktop_windows"
                        app:iconSize="18dp"
                        app:iconTint="@color/lanflix_text_sub"
                        app:strokeColor="#1AFFFFFF"
                        app:strokeWidth="1dp" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Log View (Hidden by default or toggled) -->
             <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_logs"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/lanflix_surface"
                app:cardCornerRadius="16dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp"
                android:visibility="gone">
                 <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/log_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="> System Ready..."
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/lanflix_text_sub"/>
                 </ScrollView>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>