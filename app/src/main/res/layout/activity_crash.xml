<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lanflix_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Error Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_dialog_alert"
            app:tint="@color/lanflix_primary"
            android:layout_marginBottom="24dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Something Went Wrong"
            android:textColor="@color/lanflix_text_main"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The app encountered an unexpected error.\nWe're sorry for the inconvenience."
            android:textColor="@color/lanflix_text_sub"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Restart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_restart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Restart App"
            android:textColor="@color/lanflix_bg"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/lanflix_primary"
            app:cornerRadius="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- View Details Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_details"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="View Details"
            android:textColor="@color/lanflix_text_main"
            android:textSize="16sp"
            app:backgroundTint="#1AFFFFFF"
            app:cornerRadius="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="24dp"/>

        <!-- Error Details (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/error_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/bg_glass"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error Details:"
                android:textColor="@color/lanflix_text_main"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_error_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lanflix_text_sub"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:maxLines="20"
                android:scrollbars="vertical"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
