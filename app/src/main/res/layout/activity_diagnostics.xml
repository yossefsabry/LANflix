<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lanflix_bg"
    android:padding="20dp"
    tools:context=".DiagnosticsActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@color/lanflix_text_main" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Diagnostics"
            android:textColor="@color/lanflix_text_main"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lanflix_surface"
                app:cardCornerRadius="16dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Server"
                        android:textColor="@color/lanflix_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/server_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="No server connected"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_client"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Open Client"
                        app:backgroundTint="@color/lanflix_surface_light"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_devices"
                        app:iconGravity="textStart"
                        app:iconTint="@color/lanflix_text_main"
                        android:textColor="@color/lanflix_text_main" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/lanflix_surface"
                app:cardCornerRadius="16dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test Video"
                        android:textColor="@color/lanflix_text_sub"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/selected_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="No video selected"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_refresh_videos"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Refresh"
                            app:backgroundTint="@color/lanflix_surface_light"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_sync"
                            app:iconGravity="textStart"
                            app:iconTint="@color/lanflix_text_main"
                            android:textColor="@color/lanflix_text_main" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_select_video"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="Choose"
                            app:backgroundTint="@color/lanflix_primary"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_video"
                            app:iconGravity="textStart"
                            app:iconTint="@android:color/black"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/lanflix_surface"
                app:cardCornerRadius="16dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seek Stress Test"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seek_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Run to measure seek latency"
                        android:textColor="@color/lanflix_text_sub"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_run_seek"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Run Seek Test"
                        app:backgroundTint="@color/lanflix_surface_light"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_history"
                        app:iconGravity="textStart"
                        app:iconTint="@color/lanflix_text_main"
                        android:textColor="@color/lanflix_text_main" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/lanflix_surface"
                app:cardCornerRadius="16dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Throughput Test"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/throughput_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Target: 11 Mbps"
                        android:textColor="@color/lanflix_text_sub"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_run_throughput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Run Throughput Test"
                        app:backgroundTint="@color/lanflix_surface_light"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_speed"
                        app:iconGravity="textStart"
                        app:iconTint="@color/lanflix_text_main"
                        android:textColor="@color/lanflix_text_main" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/lanflix_surface"
                app:cardCornerRadius="16dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="File Exists Test"
                        android:textColor="@color/lanflix_text_main"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exists_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Move a file and rerun to validate refresh speed"
                        android:textColor="@color/lanflix_text_sub"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_run_exists"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Run Exists"
                            app:backgroundTint="@color/lanflix_surface_light"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_folder_open"
                            app:iconGravity="textStart"
                            app:iconTint="@color/lanflix_text_main"
                            android:textColor="@color/lanflix_text_main" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_refresh_cache"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="Refresh Cache"
                            app:backgroundTint="@color/lanflix_primary"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_sync"
                            app:iconGravity="textStart"
                            app:iconTint="@android:color/black"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
