<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lanflix_bg"
    tools:context=".ClientActivity">

    <!-- Connection Input (Visible initially) -->
    <LinearLayout
        android:id="@+id/connection_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONNECT TO SERVER"
            android:textColor="@color/lanflix_text_sub"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"/>

    <!-- Back Button Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/btn_back_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/lanflix_text_main" />
    </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ip_address"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_field"
                android:hint="Enter Server IP (e.g., 192.168.1.5)"
                android:textColor="@color/lanflix_text_main"
                android:textColorHint="@color/lanflix_text_sub"
                android:inputType="number|numberDecimal"
                android:paddingHorizontal="20dp"
                android:singleLine="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Connect"
            android:textColor="@color/lanflix_bg"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/lanflix_primary"
            app:cornerRadius="16dp"/>

        <!-- Server Discovery Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="24dp"
            android:background="#1AFFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVAILABLE SERVERS"
                android:textColor="@color/lanflix_text_sub"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_weight="1"/>
                
            <ProgressBar
                android:id="@+id/scan_progress"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:indeterminateTint="@color/lanflix_primary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_diagnostics"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:text="Diagnostics"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="@color/lanflix_surface"
                app:cornerRadius="12dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp"
                app:icon="@drawable/ic_settings"
                app:iconSize="14dp"
                app:iconPadding="6dp"
                app:iconTint="@color/lanflix_text_sub"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_servers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="2"
            tools:listitem="@layout/item_server_discovered"/>
            
    </LinearLayout>

    <!-- WebView (Hidden initially) -->
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!-- Blocking Loading Overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:text="Disconnect"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:backgroundTint="@color/lanflix_surface"
            app:cornerRadius="12dp"
            app:strokeColor="#1AFFFFFF"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_glass"
            android:padding="24dp">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/lanflix_primary"/>
            
            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/lanflix_text_main"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
