<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lanflix_top_bar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="top"
    android:background="@drawable/player_scrim_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lanflix_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lanflix_speed"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/player_pill_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lanflix_subtitle_upload"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/player_pill_bg"
            android:contentDescription=
                "@string/lanflix_upload_subtitles"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/lanflix_subtitle_upload_label"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <androidx.mediarouter.app.MediaRouteButton
            android:id="@+id/lanflix_cast_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/player_icon_bg" />

        <ImageButton
            android:id="@id/exo_repeat_toggle"
            style="@style/LanflixRepeatToggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/player_icon_bg" />
    </LinearLayout>
</FrameLayout>
